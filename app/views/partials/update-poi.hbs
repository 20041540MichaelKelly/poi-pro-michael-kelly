<div class="uk-margin uk-width-2xlarge uk-margin-auto uk-card uk-card-default uk-card-body uk-box-shadow-large">
    <form class="uk-form-stacked uk-text-left" action="/updatePoi/{{poi._id}}" method="POST">
        <div class="uk-grid uk-grid-stack">
            <div class="uk-width-1-2@m">
                <div class="uk-margin">
                    <label class="uk-form-label" for="form-stacked-text">Enter Name</label>
                    <div class="uk-form-controls">
                        <input class="uk-input" id="form-stacked-text" type="Name" name="name" value="{{poi.name}}" placeholder="Name..." />
                    </div>
                </div>
                <div class="uk-margin">
                    <div class="uk-form-label">Description</div>
                    <div class="uk-form-controls">
                        <input class="uk-input" id="form-stacked-text" type="Description" name="description" value="{{poi.description}}" placeholder="Description..." />
                    </div>
                </div>
                <div class="uk-margin">
                    <div class="uk-form-label">Location</div>
                    <div class="uk-form-controls">
                        <input class="uk-input" id="form-stacked-text" type="text" name="location" value="{{poi.location}}" placeholder="Location..." />
                    </div>
                </div>
                <div class="uk-margin">
                    <button class="submit uk-button uk-button-primary uk-button-large uk-width-1-1">Add</button>
                </div>
            </div>
        </div>
    </form>
    {{> error }}
</div>